      "flavors": [
        {
          "label": "Fully configurable",
          "name": "fully-configurable",
          "index": 1,
          "install_type": "fullstack",
          "working_directory": "solutions/fully-configurable",
          "iam_permissions": [
            {
              "service_name": "containers-kubernetes",
              "role_crns": [
                "crn:v1:bluemix:public:iam::::serviceRole:Manager",
                "crn:v1:bluemix:public:iam::::role:Editor"
              ],
              "notes": "Required to create and edit Kubernetes resources."
            }
          ],
          "architecture": {
            "features": [
                  {
                    "title": " ",
                    "description": "Configured for creating standalone Kubernetes namespaces."
                  }
            ],
            "diagrams": [
              {
                "diagram": {
                  "caption": "Resources on Red Hat OpenShift cluster",
                  "url": "https://raw.githubusercontent.com/terraform-ibm-modules/terraform-ibm-kubernetes-resources/main/reference-architecture/deployable-architecture-kubernetes-resources.svg",
                  "type": "image/svg+xml"
                },
                "description": "This deployable architecture deploys Kubernetes namespaces on an existing Red Hat OpenShift cluster."
              }
            ]
          },
          "configuration": [
            {
              "key": "ibmcloud_api_key"
            },
            {
              "key": "region",
              "required": true,
              "type": "string",
              "custom_config": {
                "config_constraints": {
                  "generationType": "2"
                },
                "grouping": "deployment",
                "original_grouping": "deployment",
                "type": "vpc_region"
              }
            },
            {
              "key": "cluster_name",
              "required": true
            },
            {
              "key": "namespaces",
              "required": true,
              "display_name": "namespaces",
              "type": "array",
              "custom_config": {
                "type": "textarea",
                "grouping": "deployment",
                "original_grouping": "deployment"
              }
            },
            {
              "key": "cluster_resource_group_id",
              "required": true,
              "custom_config": {
                  "type": "resource_group",
                  "grouping": "deployment",
                  "original_grouping": "deployment",
                  "config_constraints": {
                      "identifier": "rg_id"
                  }
              }
            },
            {
              "key": "cluster_config_endpoint_type",
              "options": [
                {
                  "displayname": "default",
                  "value": "default"
                },
                {
                  "displayname": "private",
                  "value": "private"
                },
                {
                  "displayname": "vpe",
                  "value": "vpe"
                },
                {
                  "displayname": "link",
                  "value": "link"
                }
              ]
            },
            {
              "key": "provider_visibility",
              "options": [
                {
                  "displayname": "private",
                  "value": "private"
                },
                {
                  "displayname": "public",
                  "value": "public"
                },
                {
                  "displayname": "public-and-private",
                  "value": "public-and-private"
                }
              ],
              "hidden": true
            }
          ],
          "dependency_version_2": true,
          "terraform_version": "1.10.5"
        }
      ]
    }
  ]
